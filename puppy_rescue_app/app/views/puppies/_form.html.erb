<% if (@puppy.errors.any?) %>
	<% @puppy.errors.full_messages.each do |error| %>
	<p style="color:red;">
		<%= error %>
	</p>
	<% end %>
<% end %>

<%= form_for @puppy do |f| %>
	<%= f.label "Name" %>
	<%= f.text_field :name %><br />
	<%= f.label "Image Url" %>
	<%= f.text_field :image_url %><br />
	<%= f.label "Age" %>
	<%= f.text_field :age %><br />
	<%= f.label "Bio" %>
	<%= f.text_field :bio %><br />
	<%= f.label "Breed" %>
	<%= f.text_field :breed %><br />
	<%= f.submit "Create puppy" %>
<% end %>